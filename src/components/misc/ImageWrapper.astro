---
import path from "node:path";

interface Props {
	id?: string;
	src: string;
	class?: string;
	alt?: string;
	position?: string;
	basePath?: string;
	postId?: string; // 文章ID，用于生成动态图片
}

import { Image } from "astro:assets";
import {
	DEFAULT_IMAGE,
	getRandomImageForPost,
	isNetworkImage,
} from "../../utils/image-pool";
import { url } from "../../utils/url-utils";

const {
	id,
	src,
	alt,
	position = "center",
	basePath = "/",
	postId,
} = Astro.props;
const className = Astro.props.class;

// 如果src为空字符串，且提供了postId，则使用动态图片
// 如果用户明确指定了相对路径或网络链接，则使用用户指定的图片
let finalSrc = src;
if ((!src || src.trim() === "") && postId) {
	finalSrc = getRandomImageForPost(postId);
}

const isLocal = !(
	finalSrc.startsWith("/") ||
	finalSrc.startsWith("http") ||
	finalSrc.startsWith("https") ||
	finalSrc.startsWith("data:")
);
const isPublic = finalSrc.startsWith("/");
const isNetwork = isNetworkImage(finalSrc);

// TODO temporary workaround for images dynamic import
// https://github.com/withastro/astro/issues/3373
// biome-ignore lint/suspicious/noImplicitAnyLet: <check later>
let img;
if (isLocal) {
	const files = import.meta.glob<ImageMetadata>("../../**", {
		import: "default",
	});
	let normalizedPath = path
		.normalize(path.join("../../", basePath, finalSrc))
		.replace(/\\/g, "/");
	const file = files[normalizedPath];
	if (!file) {
		console.error(
			`\n[ERROR] Image file not found: ${normalizedPath.replace("../../", "src/")}`,
		);
	}
	img = await file();
}

const imageClass = "w-full h-full object-cover";
const imageStyle = `object-position: ${position}`;
const hasValidImage =
	(isLocal && img) || (!isLocal && finalSrc && finalSrc.trim() !== "");
---
{hasValidImage && (
	<div id={id} class:list={[className, 'overflow-hidden relative']}>
		<div class="transition absolute inset-0 dark:bg-black/10 bg-opacity-50 pointer-events-none"></div>
		{isLocal && img && <Image src={img} alt={alt || ""} class={imageClass} style={imageStyle}/>}
		{!isLocal && finalSrc && (
			<img 
				src={isPublic ? url(finalSrc) : finalSrc} 
				alt={alt || ""} 
				class={imageClass} 
				style={imageStyle}
				data-fallback={DEFAULT_IMAGE}
			/>
		)}
	</div>
)}
<script is:inline>
	// 处理图片加载失败时的fallback
	(function() {
		function setupImageFallback() {
			const images = document.querySelectorAll('img[data-fallback]');
			images.forEach((img) => {
				// 如果图片已经设置了error处理，跳过
				if (img.dataset.fallbackSetup) return;
				img.dataset.fallbackSetup = 'true';
				
				img.addEventListener('error', function() {
					const fallback = this.getAttribute('data-fallback');
					if (fallback && this.src !== fallback) {
						this.src = fallback;
					}
				});
			});
		}
		
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', setupImageFallback);
		} else {
			setupImageFallback();
		}
	})();
</script>
